@model Quarries
<div class="row">
    <div class="col-md-12 col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.QuarryName, settings =>
            {
                settings.Properties.NullText = "Quarry Name";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Quarry Name";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div> 
<div class=" row ">
    <div class="col-md-4 col-lg-4">
        @{
            Html.DevExpress().TextBoxFor(m => m.JurisdictionName, settings =>
            {
                settings.Properties.NullText = "Jurisdiction Name";
                settings.Width = Unit.Percentage(100);
                settings.Properties.Caption = "Jurisdiction Name";
                settings.ShowModelErrors = true;
                settings.Properties.ValidationSettings.Display = Display.Dynamic;
            }).GetHtml();
        }
    </div>
</div>

<div class="row margin-top-10">
    <div class="col-lg-12 col-md-12 ">
        @{
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnSubmit";
                settings.Text = "Submit";
                settings.ClientSideEvents.Click = "function(s,e){QuarriesGridView.UpdateEdit()}";
            }).GetHtml();
            Html.DevExpress().Button(settings =>
            {
                settings.Name = "btnCancel";
                settings.Text = "Cancel";
                settings.ControlStyle.CssClass = "margin-left-10";
                settings.ClientSideEvents.Click = "function(s,e){QuarriesGridView.CancelEdit()}";
            }).GetHtml();
        }
    </div>
</div>
