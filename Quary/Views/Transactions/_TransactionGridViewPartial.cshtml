@{
    var grid = Html.DevExpress().GridView(settings =>
    {
        settings.Name = "TransactionGridView";
        settings.Width = Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "Transactions", Action = "TransactionGridViewPartial", permitteeId = ViewBag.PermitteeId };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Transactions", Action = "TransactionGridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Transactions", Action = "TransactionGridViewPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Transactions", Action = "TransactionGridViewPartialDelete", permitteeId = ViewBag.PermitteeId };
        settings.SettingsEditing.Mode = GridViewEditingMode.EditFormAndDisplayRow;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButtonInHeader = false;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = false;

        settings.KeyFieldName = "Id";

        settings.SettingsPager.Visible = true;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = true;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

        settings.SettingsAdaptivity.AdaptivityMode = GridViewAdaptivityMode.HideDataCells;
        settings.SettingsAdaptivity.AdaptiveColumnPosition = GridViewAdaptiveColumnPosition.Right;
        settings.SettingsAdaptivity.AdaptiveDetailColumnCount = 1;
        settings.SettingsAdaptivity.AllowOnlyOneAdaptiveDetailExpanded = true;
        settings.SettingsAdaptivity.HideDataCellsAtWindowInnerWidth = 300;


        settings.Columns.Add(col =>
        {
            col.FieldName = ("FilingFee");
            col.PropertiesEdit.DisplayFormatString = "#.0#";
        });
        settings.Columns.Add(col =>
        {
            col.FieldName = "FoundationFund"; col.PropertiesEdit.DisplayFormatString = "#.0#";});
        settings.Columns.Add(col =>
        {
            col.FieldName = ("CommunalSite"); col.PropertiesEdit.DisplayFormatString = "#.0#";
        });
        settings.Columns.Add("PayloaderNew");
        settings.Columns.Add("PayloaderOld");
        settings.Columns.Add("BackHoeNew");
        settings.Columns.Add("BackHoeOld");
        settings.Columns.Add("HaulingTrucksFourteenNew").Caption = @"Hauling 14"" new";
        settings.Columns.Add("HaulingTrucksFourteenOld").Caption = @"Hauling 14"" old";
        settings.Columns.Add("HaulingTrucksTenNew").Caption = @"Hauling 10"" new";
        settings.Columns.Add("HaulingTrucksTenOld").Caption = @"Hauling 10"" old";
        settings.Columns.Add("HaulingTrucksSixNew").Caption = @"Hauling six"" new";
        settings.Columns.Add("HaulingTrucksSixnOld").Caption = @"Hauling six"" old";
        settings.Columns.Add("HaulingTrucksLessSixNew").Caption = @"Hauling <six"" new";
        settings.Columns.Add("HaulingTrucksLessSixnOld").Caption = @"Hauling <six"" old";
        settings.Columns.Add("PlantsNew");
        settings.Columns.Add("PlantsOld");
        settings.Columns.Add("PotteriesandCementNew");
        settings.Columns.Add("PotteriesandCementOld");
        settings.Columns.Add("DeliveryReceipt");
        settings.Columns.Add("TransportSlip");
    });
    if (ViewData["EditError"] != null)
    {
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()